package modificateur;
import java.util.Scanner;
public class Usage1Tapis {
public static void main(String []args)
{
Scanner s=new Scanner(System.in);
System.out.println("dooner longueur :");
float a=s.nextFloat();
System.out.println("dooner largeur :");
float b=s.nextFloat();
System.out.println("dooner prixMetreCarre :");
float c =s.nextFloat();
Tapis t1=new Tapis(a,b,c); 
float surfaceTapis=t1.calculerSurfaceTapis();
float prixt1=t1.calculerPrixTapis(surfaceTapis);
System.out.println("prix de t1 :"+prixt1);
s.close();
}
}
